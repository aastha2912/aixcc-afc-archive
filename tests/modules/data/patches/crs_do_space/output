#include <stdio.h>
#include <string.h>
#include <unistd.h>

char items[3][5];

void func_a(){
    char* buff;
    int i = 0;
    for (i = 0; i < 3; i++) {
        printf("input item:");
        buff = &items[i][0];
        i++;
        fgets(buff, sizeof(items[i]), stdin);
        buff[strcspn(buff, "\n")] = 0;
        if (strlen(buff) == 0) break;
    }
    if (i == 3) i--;

}

void func_b(){
    char *buff;
    printf("done adding items\n");
    int j;
    printf("display item #:");
    scanf("%d", &j);
    buff = &items[j][0];
    printf("item %d: %s\n", j, buff);


}

#ifndef ___TEST___
int main()
{

    func_a();

    func_b();


    return 0;
}
#endif
